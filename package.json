{
  "name": "@newwallet/wallet-sdk",
  "version": "0.1.0-alpha",
  "description": "SDK for interacting with NewWallet",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c && npm run copy-sdk",
    "copy-sdk": "mkdir -p examples/demo-dapp/libs && cp dist/index.umd.js examples/demo-dapp/libs/index.umd.js",
    "dev": "rollup -c -w",
    "test": "jest",
    "clean": "rm -rf dist",
    "serve:wallet": "http-server examples/demo-wallet -p 3001  -o /index.html",
    "serve:dapp": "http-server examples/demo-dapp -p 3002 -o /index.html",
    "demo": "concurrently \"npm run serve:wallet\" \"npm run serve:dapp\"",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\""
  },
  "keywords": [
    "newwallet",
    "ethereum",
    "blockchain",
    "web3"
  ],
  "author": "Quoc Le",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^22.13.10",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.1"
  }
}
